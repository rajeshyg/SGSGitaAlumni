# ============================================================================
# SGS GITA ALUMNI NETWORK - TEST ENVIRONMENT CONFIGURATION
# ============================================================================
# Test-specific environment variables for isolated testing

# ============================================================================
# NODE ENVIRONMENT
# ============================================================================
NODE_ENV=test

# ============================================================================
# DATABASE CONFIGURATION (Test Database)
# ============================================================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=test_user
DB_PASSWORD=test_password
DB_NAME=sgs_gita_alumni_test

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
PORT=5001
API_BASE_URL=http://localhost:5001

# ============================================================================
# AUTHENTICATION & SECURITY (Test Keys)
# ============================================================================
JWT_SECRET=test-jwt-secret-key-for-testing-only
JWT_REFRESH_SECRET=test-refresh-secret-key-for-testing-only
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=24h

# Session secret for express-session (if used)
SESSION_SECRET=test-session-secret-for-testing-only

# ============================================================================
# OTP CONFIGURATION (Test Mode)
# ============================================================================
OTP_LENGTH=6
OTP_EXPIRY_MINUTES=5
MAX_OTP_ATTEMPTS_PER_HOUR=10
MAX_DAILY_OTPS=20
OTP_RATE_LIMIT_WINDOW=60

# ============================================================================
# EMAIL SERVICE CONFIGURATION (Disabled for tests)
# ============================================================================
SMTP_PROVIDER=local-test
DEV_SKIP_EMAIL=true
DEV_LOG_OTP=true

# ============================================================================
# SMS SERVICE CONFIGURATION (Disabled for tests)
# ============================================================================
SMS_PROVIDER=local-test

# ============================================================================
# REDIS CONFIGURATION (Disabled for tests)
# ============================================================================
REDIS_ENABLED=false

# ============================================================================
# INVITATION SYSTEM
# ============================================================================
INVITATION_EXPIRY_DAYS=7
INVITATION_BASE_URL=http://localhost:5173/invitation

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# ============================================================================
# MONITORING & LOGGING (Disabled for tests)
# ============================================================================
LOG_LEVEL=error
ENABLE_LOGGING=false
ENABLE_MONITORING=false

# ============================================================================
# ADMIN CONFIGURATION (Test Admin)
# ============================================================================
ADMIN_EMAIL=test-admin@sgsgitaalumni.org
ADMIN_PASSWORD=test-admin-password

# ============================================================================
# FEATURE FLAGS (Test Mode)
# ============================================================================
ENABLE_REGISTRATION=true
ENABLE_INVITATION_ONLY=false
ENABLE_OTP_AUTH=true
ENABLE_TOTP_AUTH=true
ENABLE_SMS_OTP=false
ENABLE_EMAIL_VERIFICATION=false

# ============================================================================
# RATE LIMITING (Relaxed for tests)
# ============================================================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# ============================================================================
# TEST-SPECIFIC SETTINGS
# ============================================================================
TEST_MODE=true
TEST_OTP=123456

# Test token secret for TokenSecretManager tests
TEST_TOKEN_SECRET=test-environment-secret-12345

# Disable external services in tests
AWS_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
SENDGRID_API_KEY=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=